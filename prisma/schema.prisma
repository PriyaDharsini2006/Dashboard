// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model AdminRequest {
  id        String   @id @default(cuid())
  email     String
  name      String
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Task {
  id             String    @id @default(cuid())
  title          String
  description    String?
  dueDate        DateTime?
  completed      Boolean   @default(false)
  folderId       String
  folderRelation Folder    @relation(name: "TaskFolder", fields: [folderId], references: [id])
}

model Folder {
  id            String @id @default(cuid())
  name          String
  groupId       String
  groupRelation Group  @relation(name: "FolderGroup", fields: [groupId], references: [id])
  tasks         Task[] @relation(name: "TaskFolder")
}

model Group {
  id      String   @id @default(cuid())
  name    String
  folders Folder[] @relation(name: "FolderGroup")
}